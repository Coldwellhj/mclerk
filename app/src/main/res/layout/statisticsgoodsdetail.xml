<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eaosoft.mclerk.GWareHouseMain">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/goodsCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxEms="3"
                android:ellipsize="end"
                android:maxLines="2"
                android:gravity="center"
                android:text="名称"
                android:textSize="15sp"
               />
            <TextView
                android:id="@+id/goodsUnitName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxEms="3"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="单位"
                android:textSize="15sp"
               />
            <TextView
                android:id="@+id/goodsNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxEms="3"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="数量"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/m_ocardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxEms="3"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="卡号"
                android:textSize="15sp"
               />
            <TextView
                android:id="@+id/m_otxtRoomNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxEms="3"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="房号"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/m_oorderTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxEms="3"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="时间"
                android:textSize="15sp"
              />
            <TextView
                android:id="@+id/m_osalseman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxEms="3"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="下单人"
                android:textSize="15sp"
                />
</LinearLayout>
</LinearLayout>