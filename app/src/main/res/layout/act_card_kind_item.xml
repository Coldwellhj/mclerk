<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="afterDescendants"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000000"
	android:orientation="vertical" >
　　    
　　    
　　    <!-- 昵称和编号 -->
　　    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="2dp"
			android:layout_marginBottom="2dp"
			android:orientation="horizontal"    >
			<TextView
			android:id="@+id/txtCaption"
			android:layout_width="80dp"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:textSize="18dp" 
			android:lines="1"  
			android:layout_weight="1"
			android:gravity="left|bottom"
			   >　　            
　　        </TextView>
　　        <TextView
			android:id="@+id/txtSerialNo"
			android:layout_width="wrap_content"
			android:layout_weight="1"
			android:layout_height="wrap_content" 
			android:textStyle="bold"
			android:textColor="#FF0000"
			android:textSize="18dp"
			android:lines="1"  
			android:gravity="right|bottom"
			>　　            
　　        </TextView>
　　        

　　    </LinearLayout>
　　    <!-- 头像和简介 -->
　　    <LinearLayout 
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="2dp"
			android:layout_marginLeft="5dp"			
			android:orientation="horizontal"    >
　　      <com.eaosoft.view.GRoundImageView
			android:id="@+id/imgHeader"
			android:layout_marginTop="2dp"
			android:layout_width="128dp"
			android:layout_height="128dp" />
　　        <TextView
			android:id="@+id/txtBriefing"
			android:layout_marginLeft="2dp"
			android:textColor="#ffffff"
			android:minLines="5"
			android:maxLines="5"
			android:textStyle="bold"
			android:textSize="12dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			   >　　            
　　        </TextView>
　　    </LinearLayout>
　　    <!-- 价格、有效期-->
			<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="2dp"
			android:layout_marginBottom="2dp"
			android:descendantFocusability="blocksDescendants"
			android:orientation="horizontal"    >
　　        <TextView
				android:id="@+id/txtDateRange"							
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:textColor="#FFFFFF"
				android:textSize="24dp"
				android:gravity="left|bottom"
				android:layout_weight="1"
				android:lines="1"    >
	　　    </TextView>　　
			<TextView
				android:id="@+id/txtTotalMoney"							
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:textColor="#FF0000"
				android:textSize="24dp"
				android:layout_weight="1"
				android:gravity="right|bottom"
				android:lines="1"    >
	　　    </TextView>         
　　    </LinearLayout>
　　    <LinearLayout 
			android:id="@+id/user_card_kind_mgr"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="2dp"
			android:layout_marginBottom="2dp"
			android:descendantFocusability="blocksDescendants"
			android:orientation="horizontal"    >
	　　    
    		<Button
                android:id="@+id/btn_kind_enable"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:layout_weight="1"                
                android:text="禁用"
                android:onClick="onEnableCardKind"
                android:focusable="false"
                android:background="@drawable/login"
                android:textSize="18dp" />
    		<Button
                android:id="@+id/btn_kind_delete"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:layout_weight="1"                
                android:text="删除"
                android:background="@drawable/login"
                android:onClick="onDeleteCardKind"
                android:focusable="false"
                android:textSize="18dp" />
	　　    </LinearLayout>
　　</LinearLayout>