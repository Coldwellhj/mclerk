<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gware_house_statistics_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eaosoft.mclerk.GWareHouseStatisticsDetail">
    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="显示实时时间"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="门店"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:gravity="center"/>
        <com.eaosoft.view.RoundImageView
            android:id="@+id/personal"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_weight="1"
            android:src="@drawable/user_icon"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/printbutton"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="名称"
                    android:textSize="18sp"
                    android:textColor="@color/encode_view"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="单位"
                    android:textSize="18sp"
                    android:textColor="@color/encode_view"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="数量"
                    android:textSize="18sp"
                    android:textColor="@color/encode_view"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="卡号"
                    android:textSize="18sp"
                    android:textColor="@color/encode_view"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="房号"
                    android:textSize="18sp"
                    android:textColor="@color/encode_view"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="时间"
                    android:textSize="18sp"
                    android:textColor="@color/encode_view"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="下单人"
                    android:textSize="18sp"
                    android:textColor="@color/encode_view"/>
            </LinearLayout>
            <com.eaosoft.view.LoadMoreListView
                android:id="@+id/lv_goods_statistics_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </com.eaosoft.view.LoadMoreListView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_weight="10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日期"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/dateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/tvborde" />
                </LinearLayout>
            <Button
                android:id="@+id/statistics_detail_search"
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginTop="10dp"

                android:background="@color/printbutton"
                android:text="查找订单"
                android:textColor="@color/encode_view"
                android:textSize="18sp" />
                <Button
                    android:id="@+id/statistics_detail_print"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/printbutton"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/encode_view"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:text="打印报表"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
