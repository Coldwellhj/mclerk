<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_gware_house_statistics"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                tools:context="com.eaosoft.mclerk.GWareHouseStatistics">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="显示实时时间"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="门店"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <com.eaosoft.view.RoundImageView
        android:id="@+id/personal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/user_icon" />
    <LinearLayout
        android:id="@+id/set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/head"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chooseblu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/spborde"
            android:textColor="@color/viewfinder_laser"
            android:text="选择蓝牙"/>
        <Button
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/spborde"
            android:textColor="@color/encode_view"
            android:text="连接"/>
        <Button
            android:id="@+id/refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/spborde"
            android:textColor="@color/encode_view"
            android:text="刷新"/>
        <Button
            android:id="@+id/ViewReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/spborde"
            android:textColor="@color/encode_view"
            android:text="报表"/>
        <Button
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/spborde"
            android:textColor="@color/encode_view"
            android:text="历史"/>
    </LinearLayout>

    <com.eaosoft.util.SwitchButton
        android:layout_below="@+id/head"
        android:id="@+id/switchButton"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.eaosoft.util.SwitchButton>
    <TextView
        android:layout_below="@+id/head"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/switchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="打印两遍"/>
    <LinearLayout
        android:layout_below="@+id/set"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="打单列表"
            />
            <ListView
                android:id="@+id/lv_shopRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

               >
            </ListView>
            <ListView
                android:id="@+id/lv_history_shopRoom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
            </ListView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/printbutton"

            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="名称"
                android:textSize="18sp"
                android:textColor="@color/encode_view"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="单位"
                android:textSize="18sp"
                android:textColor="@color/encode_view"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="数量"
                android:textSize="18sp"
                android:textColor="@color/encode_view"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="卡号"
                android:textSize="18sp"
                android:textColor="@color/encode_view"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="房号"
                android:textSize="18sp"
                android:textColor="@color/encode_view"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="时间"
                android:textSize="18sp"
                android:textColor="@color/encode_view"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下单人"
                android:textSize="18sp"
                android:textColor="@color/encode_view"/>
        </LinearLayout>
            <ListView
                android:id="@+id/lv_goods_statistics_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>