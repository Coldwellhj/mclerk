<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_card_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eaosoft.mclerk.CardSearch">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/shareholder_background"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="门店"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <com.eaosoft.view.RoundImageView
        android:id="@+id/personal"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/user_icon" />
    <TextView
        android:id="@+id/userName"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/tv_card_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="单卡查询"/>
    <LinearLayout
        android:id="@+id/ll_cardNum"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_card_search"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卡号"
            android:padding="10dp"
            android:textColor="@color/encode_view"
            android:background="@color/yellow"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/et_cardNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_phoneNumber"
        android:layout_below="@+id/ll_cardNum"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:padding="10dp"
            android:textColor="@color/encode_view"
            android:background="@color/green"
            android:textSize="18sp"/>
        <EditText
            android:id="@+id/et_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:id="@+id/bt_search"
        android:layout_below="@id/ll_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/shareholder_background"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/encode_view"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="查询">

    </Button>

    <TextView
        android:id="@+id/tv_record"
        android:layout_below="@id/ll_phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="22dp"
        android:text="消费记录"/>
    <WebView
        android:id="@+id/wv_search"
        android:layout_below="@id/bt_search"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></WebView>
</RelativeLayout>
