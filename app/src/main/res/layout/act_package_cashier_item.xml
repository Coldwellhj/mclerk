<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/encode_view"
	android:orientation="vertical" >
　　
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/orderNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="序号"/>
        <TextView
            android:id="@+id/packageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="套餐名称"/>
        <TextView
            android:id="@+id/drinksName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="酒水名称"/>
        <TextView
            android:id="@+id/unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="单位"/>
        <TextView
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="数量"/>
        <TextView
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="金额"/>
        <TextView
            android:id="@+id/editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="编辑人"/>
        <Button
            android:id="@+id/btn_kind_enable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="禁用"
            android:textColor="@color/encode_view"
            android:onClick="onEnableCardKind1"
            android:focusable="false"
            android:background="@drawable/printbutton"
            />
        <Button
            android:id="@+id/btn_kind_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="修改"
            android:textColor="@color/encode_view"

            android:focusable="false"
            android:background="@drawable/printbutton"
            />
        <Button
            android:id="@+id/btn_kind_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/encode_view"
            android:layout_weight="1"
            android:text="删除"
            android:background="@drawable/printbutton"
            android:onClick="onDeleteCardKind1"
            android:focusable="false"
            />
    </LinearLayout>


　　
　　</LinearLayout>