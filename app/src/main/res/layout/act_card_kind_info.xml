<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sv_member_list"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:scrollbars="vertical"
	android:fadingEdge="vertical"
	android:background="#ffffff"
	>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!-- 附件信息 -->
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"        
    android:orientation="horizontal">
    <TextView
	        android:layout_marginTop="5dp"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"            
	        android:background="@drawable/login_edit_pressed"	       
	        android:text="门店名称："
	        android:textSize="12dp"
	        android:singleLine="true"	     
	        android:gravity="center_vertical|center"   
	        />"
    <TextView
	        android:id="@+id/txt_group_caption"
	        android:layout_marginTop="5dp"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"	                  
	        android:background="@drawable/login_edit_normal"	        
	        android:hint="请选择门店名称"
	        android:textSize="12dp"
	        android:singleLine="true"	    
	        android:clickable="true"    
	        android:onClick="onClickGroupCaption"
	        android:gravity="center_vertical|center"
	        />
    </LinearLayout>
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"        
    android:orientation="horizontal">
    <TextView
	        android:layout_marginTop="5dp"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
            android:drawablePadding="8dp"
	        android:background="@drawable/login_edit_pressed" 
	        android:text="套餐名称："
	        android:textSize="12dp"
	        android:singleLine="true"	        
	        android:gravity="center_vertical|center"
	        />
    <EditText
	        android:id="@+id/txt_card_kind_caption"
	        android:layout_marginTop="5dp"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"	                    
	        android:background="@drawable/login_edit_normal"	        
	        android:clickable="true"    	        
	        android:textSize="12dp"
	        android:hint="请输入套餐名称"
	        android:singleLine="true"	    	        	        
	        android:gravity="center_vertical|center"    
	        /> 
	</LinearLayout>
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"        
    android:orientation="horizontal">
    <TextView
	        android:layout_marginTop="5dp"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
            android:drawablePadding="8dp"
	        android:background="@drawable/login_edit_pressed"
	        android:text="截止日期："
	        android:textSize="12dp"
	        android:singleLine="true"	        
	        android:gravity="center_vertical|center"
	        />
	<TextView
	        android:id="@+id/txt_date_end"
	        android:layout_marginTop="5dp"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"	        
            android:drawablePadding="8dp"
	        android:background="@drawable/login_edit_normal"	        
	        android:hint="请输入截止日期"
	        android:textSize="12dp"
	        android:singleLine="true"	        
	        android:onClick="onClickCardKindDateEnd"
	        android:gravity="center_vertical|center"
	        />         
	</LinearLayout>
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"        
    android:orientation="horizontal">
    <TextView
	        android:layout_marginTop="5dp"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
            android:drawablePadding="8dp"
	        android:background="@drawable/login_edit_pressed"
	        android:text="总计金额："
	        android:textSize="12dp"
	        android:singleLine="true"	        
	        android:gravity="center_vertical|center"
	        />
	<EditText
	        android:id="@+id/txt_total_money"
	        android:layout_marginTop="5dp"
	        android:layout_height="wrap_content"
	        android:layout_width="fill_parent"	        
            android:drawablePadding="8dp"
	        android:background="@drawable/login_edit_normal"	        
	        android:hint=""
	        android:textSize="12dp"
	        android:singleLine="true"	        	        
	        android:gravity="center_vertical|center"
	        />         
	</LinearLayout>
    <!-- 套餐中信息 -->
    <LinearLayout
    android:id="@+id/ll_card_kind_goods_list"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"        
    android:orientation="vertical">
	</LinearLayout>
	
	<LinearLayout    
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"        
    android:orientation="horizontal">"

	
    	<!-- 提交按钮 -->
		<Button
                android:id="@+id/btnConfirmCreate"                
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="60dp"                               
                android:layout_marginTop="10dp"
                android:background="@drawable/login"
                android:onClick="onCardKindCreateConfirm"
                android:text="确认提交"
                android:textSize="36dp" />  
		<Button
                android:id="@+id/btnConfirmGoodsAdd"                
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="60dp"                               
                android:layout_marginTop="10dp"
                android:background="@drawable/login"
                android:onClick="onCardKindGoodsAdd"
                android:text="增加"
                android:textSize="36dp" />   
		</LinearLayout>
	</LinearLayout>
</ScrollView>